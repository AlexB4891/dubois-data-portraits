#!/bin/sh
case $0 in
	*mkdeck)
		decksh household.dsh | pdf -pagesize $portrait     -mono FiraMono-Regular -sans PublicSans-Regular -serif PublicSans-Bold $* ;;
	*mkdeck-png)
		decksh household.dsh | pngdeck -pagesize $portrait -mono FiraMono-Regular -sans PublicSans-Regular -serif PublicSans-Bold $* /dev/stdin ;;
esac
